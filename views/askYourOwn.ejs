<body>
    <h1>Make A Question</h1>
    <br>
    <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Question" name="question" id="questionInput" type="text" class="validate" required>
              <label for="question">Question</label>
            </div>
            <div class="input-field col s6">
              <input placeholder="Answer" name="answer" id="answerInput" type="text" class="validate" required>
              <label for="answer">Answer</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Your Name" name="creator" id="creatorInput" type="text" class="validate" required>
              <label for="creator">Creator</label>
            </div>
          </div>
        </form>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit </button>
    </div>    
</body>
